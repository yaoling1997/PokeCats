<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:id="@+id/settingLayout">

    <com.example.acer_pc.pokecats.gamedemo.StrokeTextView
        android:id="@+id/tvBgMusic"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical|left"
        android:text="@string/bgMusic"
        android:textColor="#EA5246"
        android:textStyle="bold|italic"
        android:textSize="18sp"
        />
    <Button
        android:id="@+id/btnBgMusic"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/tvBgMusic"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/btn_off"
        />
    <com.example.acer_pc.pokecats.gamedemo.StrokeTextView
        android:id="@+id/tvSounds"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_below="@id/tvBgMusic"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical|left"
        android:text="@string/sounds"
        android:textColor="#EA5246"
        android:textStyle="bold|italic"
        android:textSize="18sp"
        />
    <Button
        android:id="@+id/btnSounds"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/tvSounds"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/btn_off"
        />

</RelativeLayout>